<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.cvut.fit.nurguitarsongbook">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cz.cvut.fit.nurguitarsongbook.main.song.songdetail.SongEditActivity"
            android:label="@string/title_activity_song_edit"
            android:theme="@style/AppTheme" />
        <activity
            android:name="cz.cvut.fit.nurguitarsongbook.main.song.songdetail.PlaySongActivity"
            android:label="@string/title_activity_play_song"
            android:theme="@style/AppTheme" />
    </application>

</manifest>